@model l9l.Data.ViewModels.RegisterViewModel
@{
    Layout = "_layout";
}

<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto lp">
            <div class="myform form">
                <div class="logo mb-3">
                    <div class="col-md-12 text-center">
                        <h1></h1>
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.LabelFor(c => c.Email)
                        @Html.TextBoxFor(c => c.Email,
                            new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Email)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(c => c.Password)
                        @Html.PasswordFor(c => c.Password,
                            new { @class = "form-control" })
                        @Html.ValidationMessageFor(c => c.Email)
                    </div>

                    <div class="form-group">
                        <p class="text-center">
                            <a href="#">
                                Don't Remember Password
                            </a>
                        </p>
                    </div>

                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <button type="submit"
                                    class="btn btn-block btn-primary mybtn tx-tfm">
                                Login
                            </button>
                        </div>

                    </div>

                    <div class="form-group">
                        <p class="text-center">
                            Don't have account?
                            <a href="/Account/Register" id="signup">
                                Sign up
                            </a>
                        </p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>>