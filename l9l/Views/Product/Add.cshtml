@model l9l.Data.ViewModels.ProductViewModel

@{
    Layout = "_Layout";
}

@using (Html.BeginForm("Add", "Product", FormMethod.Post
                , new { enctype = "multipart/form-data" }))
{
    <div class="row" style="margin:20px auto; width:50%">
        @Html.LabelFor(c => c.Product.Name)
        @Html.TextBoxFor(c => c.Product.Name, new { @class = "form-control" })

        @Html.LabelFor(c => c.Product.Price)
        @Html.TextBoxFor(c => c.Product.Price, new { @class = "form-control" })

        @Html.LabelFor(c => c.Product.ShortDiscription)
        @Html.TextBoxFor(c => c.Product.ShortDiscription, new { @class = "form-control" })

        @Html.LabelFor(c => c.Product.CategoryId)
        @Html.DropDownListFor(c => c.Product.CategoryId,
            new SelectList(Model.Categories, "Id", "Name"), 
            new { @class = "form-control"})

        <label>Choose Image</label>
        <input type="file" name="UploadedImage" class="form-control" style="margin:5px" />

        <input type="submit" class="btn btn-primary form-control" value="Add Product" />
    </div>

}